# GridTrader Pro - Simple Production Deployment
FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    default-libmysqlclient-dev \
    pkg-config \
    curl \
    netcat-openbsd \
    && rm -rf /var/lib/apt/lists/* \
    && useradd -m -u 1000 appuser

# Set working directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements.txt /app/
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . /app/

# Create necessary directories and set permissions
RUN mkdir -p /app/logs /app/static /app/templates \
    && chown -R appuser:appuser /app

# Create simple startup script
RUN echo '#!/bin/bash\n\
set -e\n\
echo "ðŸš€ Starting GridTrader Pro..."\n\
\n\
# Wait for database\n\
if [ "$DB_HOST" ] && [ "$DB_HOST" != "localhost" ]; then\n\
    echo "â³ Waiting for database at $DB_HOST:${DB_PORT:-3306}..."\n\
    timeout=60\n\
    while ! nc -z "$DB_HOST" "${DB_PORT:-3306}" && [ $timeout -gt 0 ]; do\n\
        sleep 2\n\
        timeout=$((timeout - 1))\n\
    done\n\
    \n\
    if [ $timeout -eq 0 ]; then\n\
        echo "âŒ Database connection timeout"\n\
        exit 1\n\
    fi\n\
    echo "âœ… Database connection established"\n\
fi\n\
\n\
# Create database tables\n\
echo "ðŸ”§ Setting up database..."\n\
python -c "from database import create_tables; create_tables()"\n\
\n\
# Start application\n\
echo "ðŸŽ¬ Starting GridTrader Pro..."\n\
exec python main.py' > /start.sh && chmod +x /start.sh

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:3000/health || exit 1

# Switch to app user
USER appuser

# Start the application
CMD ["/start.sh"]