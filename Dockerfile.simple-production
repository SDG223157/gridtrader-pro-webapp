# GridTrader Pro - Simple Production (Following prombank_backup pattern)
FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libpq-dev \
    ca-certificates \
    pkg-config \
    curl \
    netcat-openbsd \
    && rm -rf /var/lib/apt/lists/* \
    && useradd -m -u 1000 appuser

# Set working directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements.txt /app/
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . /app/

# Create necessary directories
RUN mkdir -p /app/logs \
    /app/static \
    /app/templates

# Set up permissions
RUN chown -R appuser:appuser /app

# Create simple startup script (following prombank pattern)
RUN echo '#!/bin/bash\n\
set -e\n\
echo "ðŸš€ Starting GridTrader Pro..."\n\
\n\
# Initialize database\n\
echo "ðŸ”§ Setting up database..."\n\
python -c "from database import create_tables; create_tables()" || echo "âš ï¸ DB init skipped"\n\
\n\
# Start application\n\
echo "ðŸŽ¬ Starting GridTrader Pro..."\n\
exec python main.py' > /start-simple.sh && chmod +x /start-simple.sh

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:3000/health || exit 1

# Switch to app user
USER appuser

# Start the application (simple, no supervisord)
CMD ["/start-simple.sh"]
