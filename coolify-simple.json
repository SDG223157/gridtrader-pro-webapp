{
  "name": "GridTrader Pro Simple",
  "description": "Systematic Investment Management Platform - Simple Deployment (No Supervisord)",
  "type": "dockerfile",
  "dockerfile": "Dockerfile.simple-production",
  "buildArgs": {},
  "environment": {
    "DB_HOST": "${DB_HOST}",
    "DB_PORT": "3306",
    "DB_NAME": "default", 
    "DB_USER": "mysql",
    "DB_PASSWORD": "${DB_PASSWORD}",
    "GOOGLE_CLIENT_ID": "${GOOGLE_CLIENT_ID}",
    "GOOGLE_CLIENT_SECRET": "${GOOGLE_CLIENT_SECRET}",
    "GOOGLE_REDIRECT_URI": "https://gridsai.app/api/auth/google/callback",
    "SECRET_KEY": "${SECRET_KEY}",
    "ENVIRONMENT": "production",
    "HOST": "0.0.0.0",
    "PORT": "3000",
    "HOSTNAME": "0.0.0.0",
    "FRONTEND_URL": "https://gridsai.app",
    "JWT_ALGORITHM": "HS256",
    "JWT_EXPIRE_HOURS": "24"
  },
  "ports": [
    {
      "internal": 3000,
      "external": 80,
      "protocol": "http"
    }
  ],
  "volumes": [
    {
      "source": "./logs",
      "target": "/app/logs",
      "type": "bind"
    }
  ],
  "healthcheck": {
    "url": "/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "resources": {
    "memory": "512M",
    "cpu": "0.5"
  },
  "restart": "unless-stopped"
}
